<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <h2><%= @user.name %>さんへのおすすめアーティストは、
      <%= link_to @artist,"https://ja.wikipedia.org/wiki/#{@artist}" %>です</h2>
    </section>
  </aside>
  <%= render 'shared/feed' %>
</div>