<li id="micropost-<%= micropost.id %>">
  <div class = tweet>
    <div class = target>
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    </div>
    <div class = user>
      <%= link_to micropost.user.name, micropost.user %>
      <%= micropost.created_at.strftime("%Y/%m/%d %H:%M") %>
    </div>
    <div class = song>ТЏ▓тљЇ:  <%= link_to micropost.song, "https://www.youtube.com/results?search_query=#{micropost.song}" %></div>
    <div class = artist>сѓбсЃФсЃљсЃатљЇ: <%= link_to micropost.artist, "https://www.youtube.com/results?search_query=#{micropost.artist}" %></div>
    <div class = content>ТёЪТЃ│:  <%= micropost.content %></div>
    <div class = picture><%= image_tag micropost.picture.url if micropost.picture? %></div>
    <div id="likes_buttons_<%= micropost.id %>">
    <% if current_user.present? %>
				<%= render :partial => "microposts/action", :locals => { micropost: micropost } %>
		</div>
		<% else %><!-- authorized -->
				<%= link_to micropost_likes_path(micropost.id)  ,method: :post, :style => "margin-left:1em" do %>
				  <p class="action">­ЪЉє<%= micropost.likes.count %></p>
				<% end %>
				<%= link_to micropost_likes_path(micropost.id), method: :post, :style => "margin-left:1em" do %>
					<p class="action">­ЪЊѓ<%= micropost.likes.count %></p>
		    <% end %>
		<% end %><!-- guest -->
		<%= render :partial => 'users/follow_form', :locals => { micropost: micropost }  if logged_in? %>
    <% if current_user?(micropost.user) %>
      <%= link_to "тЅіжЎц", micropost, method: :delete,
                                         data: { confirm: "тЅіжЎцсЂЌсЂдсѓѕсѓЇсЂЌсЂёсЂДсЂЎсЂІ?" } %>
    <% end %>
      </div>
  </span>
</li>